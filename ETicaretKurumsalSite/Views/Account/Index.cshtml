@model EntityLayer.Customer

@{
    ViewData["Title"] = "Hesabım";
}

<style>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" >
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" >
</style>


<div class="bg-gray">
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title text-center" style="color: #7AACC2;">Profilim</h1>
                        <hr>
                        <div class="text-center">
                            <p class="lead">Hoş geldiniz, <strong>@Context.Session.GetString("kullanici") @Context.Session.GetString("soyad")</strong>!</p>
                            <p>Burada profil bilgilerinizi güncelleyebilir ve hesap ayarlarınızı yönetebilirsiniz.</p>
                        </div>
                        <hr>
                        <div>
                            <h3 class="text-center">Hesap Bilgileri</h3>
                            <ul class="list-group">
                                <li class="list-group-item"><strong>Ad:</strong> @Context.Session.GetString("kullanici")</li>
                                <li class="list-group-item"><strong>Soyad:</strong> @Context.Session.GetString("soyad")</li>
                                <li class="list-group-item"><strong>Email:</strong> @Context.Session.GetString("hesap")</li>
                                <li class="list-group-item"><strong>Telefon:</strong> @Context.Session.GetString("tel")</li>
                                <li class="list-group-item"><strong>Şifre:</strong> ************</li>
                            </ul>
                            <hr>
                            <div class="text-center">
                                <a href="@Url.Action("Update", "Account")" class="btn btn-primary">
                                    <i class="fas fa-edit"></i> Profilimi Düzenle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
</div>
