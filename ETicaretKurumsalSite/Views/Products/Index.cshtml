@model IEnumerable<Product>

<br />
<br />
<br />
<br />
<section id="mobile-products" class="product-store position-relative ">
    <div class="container">
        <div class="row row-cols-6">
            @foreach (var item in Model.Where(x => x.IsActive))
            {
                <div class="col mb-4">
                    <a href="/@item.Name.Replace(" ","-").ToLower()/Products/Detail/@item?.Id" class="text-decoration-none">
                        <div class="product-card position-relative">
                            <div class="image-holder">
                                <img src="/Images/@item.Image" alt="product-item" class="img-fluid">
                            </div>
                            <div class="card-detail pt-3">
                                <h3 class="card-title text-uppercase">
                                    <a href="/Products/Detail/@item.Id">@item.Name</a>
                                </h3>
                                <span class="item-price text-primary">@item.Price ₺</span>
                            </div>
                            <div class="cart-concern position-absolute">
                                <div class="cart-button d-flex">
                                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                        <input type="hidden" name="productId" value="@item.Id" />
                                        <button type="submit" class="btn btn-lg btn-black">
                                            <!-- btn-lg sınıfını ekledik -->
                                            Sepete Ekle
                                            <svg class="cart-outline"><use xlink:href="#cart-outline"></use></svg>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<style>
    .product-card {
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .image-holder img {
        width: 100%;
        height: auto;
        border-bottom: 1px solid #dee2e6;
    }

    .card-detail {
        padding: 15px;
    }

    .item-price {
        display: block;
        margin-top: 10px;
    }
</style>
