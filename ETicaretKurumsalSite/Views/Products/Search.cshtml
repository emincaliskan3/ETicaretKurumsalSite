@model IEnumerable<Product>
@{
    ViewData["Title"] = Context.Request.Query["q"] + " Arama Sonuçları";
}
<br />
<br />
<br />
<br />
<br />
<h1>@ViewData["Title"]</h1>

<div class="row row-cols-4 ">
    @foreach (var item in Model.Where(x => x.IsActive))
    {
        <div class="col mb-4">
            <a href="/@item.Name.Replace(" ","-").ToLower()/Products/Detail/@item?.Id" class="text-decoration-none">
                <div class="product-card">
                    <div class="image-holder">
                        <img src="/Images/@item.Image" alt="product-item" class="img-fluid">
                    </div>
                    <div class="card-detail pt-3">
                        <h3 class="card-title text-uppercase">
                            <a href="/Products/Detail/@item.Id">@item.Name</a>
                        </h3>
                        <span class="item-price text-primary">@item.Price</span>
                    </div>
                    <div class="cart-concern">
                        <div class="cart-button">
                            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                <input type="hidden" name="productId" value="@item.Id" />
                                <button type="submit" class="btn btn-medium btn-black">
                                    Sepete Ekle
                                    <svg class="cart-outline"><use xlink:href="#cart-outline"></use></svg>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </a>
        </div>

    }
</div>
<br />
<br />
<br />
<style>
    
    .product-card {
        border-radius: 5px; /* Köşelerdeki çizgileri kaldırır */
        overflow: hidden; /* İçerikleri sınırlar */
        /* Diğer gerekli stillendirmeleri ekleyin */
    }

    .image-holder img {
        width: 100%;
        height: auto; /* En-boy oranını korur */
    }

    .card-detail {
        padding: 0 15px; /* Gerekirse ayarlayın */
    }

    .item-price {
        display: block; /* Fiyatı yeni bir satıra alır */
        margin-top: 5px; /* Boşluğu ayarlayın */
    }



    .product-card:hover .cart-button {
        position: absolute; /* Change position to absolute when parent (.product-card) is hovered */
    }

</style>