
<form action="/Home/ContactUs" method="post" class="p-4 p-md-5 border rounded-3 bg-body-tertiary bg-white">
    <h3 class="yazifont">
        Bize Mesaj Gönderin

    </h3>
    <div class="row row-cols-2">
        <div class="col">
            <div class="form-floating mb-3">
                <input name="Name" required type="text" class="form-control" id="floatingInput" placeholder="Ad ">
                <label for="floatingInput">Ad </label>
            </div>
        </div>
        <div class="col">
            <div class="form-floating mb-3">
                <input name="Surname" required type="text" class="form-control" id="floatingInput" placeholder="Soyad">
                <label for="floatingInput">Soyad</label>
            </div>
        </div>
    </div>


    <div class="row row-cols-2">
        <div class="col">
            <div class="form-floating mb-3">
                <input name="Email" required type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Email</label>
            </div>
        </div>
        <div class="col">
            <div class="form-floating mb-3">
                <input name="Phone" type="text" class="form-control" id="floatingInput" placeholder="İrtibat Numarası">
                <label for="floatingInput">İrtibat Numarası</label>
            </div>
        </div>
    </div>


    <div class="form-floating mb-3">
        <textarea name="Message" required class="form-control" style="min-height:100px" id="floatingPassword" placeholder="Mesajınız"></textarea>
        <label for="floatingPassword">Mesajınız</label>
    </div>

    <button class="w-100 btn btn-lg btn-primary" type="submit">Gönder</button>
    <hr class="my-4">
    <small class="text-body-secondary">Size en kısa sürede döneceğiz.</small>
</form>
