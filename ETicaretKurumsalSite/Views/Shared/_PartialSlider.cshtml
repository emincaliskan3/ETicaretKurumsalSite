@model IEnumerable<Slide>

<section id="billboard" class="position-relative overflow-hidden bg-light-blue">
    <div class="swiper main-swiper swiper-initialized swiper-horizontal swiper-backface-hidden">
        <div class="swiper-wrapper" id="swiper-wrapper-defd342c0e721066b" aria-live="polite">
            @foreach (var item in Model)
            {
                <div class="swiper-slide" style="width: 100%;">
                    <div class="container">
                        <div class="row d-flex align-items-center">
                            <div class="col-md-6">
                                <div class="banner-content">
                                    <h1 class="display-2 text-uppercase text-dark pb-5">@item.Title</h1>
                                    <a asp-controller="Products" asp-action="Index" class="btn btn-medium btn-dark text-uppercase btn-rounded-none">Ürün Mağazası</a>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="image-holder">
                                    <img src="~/Images/@item.Image" alt="alem">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="swiper-icon swiper-arrow swiper-arrow-prev" tabindex="0" role="button" aria-label="Sonraki slayt">
            <svg class="chevron-left">
                <use xlink:href="#chevron-left"></use>
            </svg>
        </div>
        <div class="swiper-icon swiper-arrow swiper-arrow-next" tabindex="0" role="button" aria-label="Önceki slayt">
            <svg class="chevron-right">
                <use xlink:href="#chevron-right"></use>
            </svg>
        </div>
    </div>
    <div class="swiper-notification" aria-live="assertive" aria-atomic="true"></div>
</section>
